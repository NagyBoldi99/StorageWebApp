@inherits LayoutComponentBase

<div class="main">
    <div class="sidebar">
        <!-- Navigációs elemek -->
        <ul>
            <li><a href="/" @onclick="NavigateToHome">Kezdőlap</a></li>
            <li><a href="/login" @onclick="NavigateToLogin">Belépés</a></li>
            <li><a href="/register" @onclick="NavigateToRegistration">Regisztráció</a></li>
            <!-- További menüpontok hozzáadása esetén itt folytathatod -->
        </ul>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {
    [Inject]
    private NavigationManager NavigationManager { get; set; } = default!; // Required field

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void NavigateToRegistration()
    {
        NavigationManager.NavigateTo("/register");
    }

    // Constructor with NavigationManager as a required dependency
    public MainLayout()
    {
        // Blazor will automatically inject the NavigationManager here
    }
}
