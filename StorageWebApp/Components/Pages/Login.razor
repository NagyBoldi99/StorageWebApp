@page "/login"

<h2>Bejelentkezés</h2>

<form>
    <div>
        <label for="username">Felhasználónév:</label>
        <input type="text" id="username" name="username" />
    </div>
    <div>
        <label for="password">Jelszó:</label>
        <input type="password" id="password" name="password" />
    </div>
    <button type="submit">Bejelentkezés</button>
</form>
